npm-hard () {
    docker run \
        --tty \
        --interactive \
        --rm \
	--net=host \
        --volume $(pwd):/app \
	--volume ~/.npm-alpine:/npm-data \
	--volume /etc/passwd:/etc/passwd:ro \
	--volume /etc/group:/etc/group:ro \
	--user $(id -u):$(id -g) \
	--env NPM_CONFIG_CACHE=/npm-data \
        furdarius/npm-hard-docker:alpine "$@"
}
